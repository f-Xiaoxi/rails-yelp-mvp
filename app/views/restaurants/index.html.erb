<div class="col m-3 text-center" >
<h1>Restaurants</h1>
<% @restaurants.each do |restaurant|%>
  <h4>
    <%= link_to restaurant.name, "/restaurants/#{restaurant.id}" %>
  </h4>
  <p>
    <strong>Address: </strong><%= restaurant.address %><br>
  <strong>Phone: </strong><%= restaurant.phone_number %>
  </p>
<% end %>

<%= link_to "Add restaurant", new_restaurant_path(@restaurant) , class: "btn btn-primary" %>

</div>
